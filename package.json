{
  "private": true,
  "workspaces": [
    "web",
    "server",
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "lint": "run-p lint:*",
    "lint:tsc": "yarn workspace @frere/web lint:tsc",
    "lint:prettier": "prettier --check '**/*/*.{js,ts}'",
    "fix:prettier": "prettier --write '**/*/*.{js,ts}'",
    "lint:eslint": "yarn workspace @frere/web lint",
    "start": "yarn workspace @frere/web start",
    "build": "yarn workspace @frere/web build"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.4.4",
    "@types/node": "^18.15.3",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
